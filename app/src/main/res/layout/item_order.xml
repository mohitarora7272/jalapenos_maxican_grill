<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-1dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/orderCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:cardElevation="1dp"
        card:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderID"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="3dp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderDate"
                android:layout_below="@+id/orderID"
                android:layout_alignLeft="@+id/orderID"
                android:layout_alignStart="@+id/orderID"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderStatus"
                android:layout_alignTop="@+id/orderID"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderTotal"
                android:layout_alignTop="@+id/orderDate"
                android:layout_alignRight="@+id/orderStatus"
                android:layout_alignEnd="@+id/orderStatus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_alignBottom="@+id/orderStatus"
                android:layout_toLeftOf="@+id/orderStatus"
                android:layout_toStartOf="@+id/orderStatus"
                android:layout_marginRight="5dp" />
        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>